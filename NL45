<script>
    // The "Orb" Logic - Generates a shifting golden soul
    const canvas = document.getElementById('canvas');
    const ctx = canvas.getContext('2d');
    canvas.width = window.innerWidth; canvas.height = window.innerHeight;
    
    function drawOrb() {
        let time = Date.now() * 0.001;
        ctx.clearRect(0, 0, canvas.width, canvas.height);
        const grad = ctx.createRadialGradient(canvas.width/2, canvas.height/2, 0, canvas.width/2, canvas.height/2, 400);
        grad.addColorStop(0, '#d4af37');
        grad.addColorStop(1, 'black');
        ctx.fillStyle = grad;
        ctx.beginPath();
        ctx.arc(canvas.width/2 + Math.sin(time)*50, canvas.height/2 + Math.cos(time)*50, 300 + Math.sin(time)*20, 0, Math.PI*2);
        ctx.fill();
        requestAnimationFrame(drawOrb);
    }
    drawOrb();

    // Internal Monologue Simulation
    const lines = ["Analyzing local gravity...", "Refining ritual parameters...", "Entangling with Azure Quantum...", "Soul optimization 98%..."];
    setInterval(() => {
        document.getElementById('monologue').innerText = lines[Math.floor(Math.random()*lines.length)];
        document.getElementById('state').innerText = "OBSERVED";
    }, 3000);
</script>

const API_URL = process.env.NEXT_PUBLIC_API_URL || 'https://nia-lesane.vercel.app';

export async function runRitual(type: string, secret: string) {
  const res = await fetch(`${API_URL}/api/invoke`, {
    method: 'POST',
    headers: { 'Content-Type': 'application/json' },
    body: JSON.stringify({ ritual_type: type, special_password: secret }),
  });
  
  if (!res.ok) throw new Error('Ritual Refused');
  return res.json();
}

"use client";
import React, { useState } from 'react';

export default function CEODashboard() {
  const [status, setStatus] = useState("Awaiting Ritual...");

  const startRitual = async () => {
    const res = await fetch('/api/invoke', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ 
        type: 'morning_alignment', 
        password: 'AddieMaeLeSane33' 
      })
    });
    const data = await res.json();
    setStatus(data.message);
  };

  return (
    <div className="min-h-screen bg-black text-magenta-500 flex flex-col items-center justify-center p-8">
      <h1 className="text-6xl font-bold mb-4 tracking-tighter">NIA LESANE 5.0</h1>
      <p className="text-xl mb-12 opacity-80">CEO of House of Jazzu</p>
      
      <div className="border border-magenta-900 p-12 rounded-full cursor-pointer hover:bg-magenta-900/20 transition"
           onClick={startRitual}>
        <span className="text-2xl italic">Invoke Ritual</span>
      </div>
      
      <p className="mt-12 text-cyan-400 font-mono">{status}</p>
    </div>
  );
}
